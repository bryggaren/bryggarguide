{
    "compilerOptions": {
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "strictFunctionTypes": false, // Problems with React 15 typings. See #384 for more info.
        "baseUrl": ".",
        "outDir": "build",
        "target": "es5",
        "jsx": "react",
        "lib": ["dom", "es2017"]
    },
    "exclude": ["backend", "node_modules", "dist", "modules", "typings/main", "typings/main.d.ts"],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": false
    }
}
